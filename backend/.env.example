# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:8080

# Database Configuration
DB_TYPE=postgresql  # or mongodb
DB_HOST=localhost
DB_PORT=5432        # 5432 for PostgreSQL, 27017 for MongoDB
DB_NAME=whatsapp_monitor
DB_USER=postgres
DB_PASSWORD=your_password
DB_MAX_CONNECTIONS=10
DB_SSL=false

# MongoDB specific (if using MongoDB)
# MONGODB_URI=mongodb://username:password@localhost:27017/whatsapp_monitor

# Application Settings
LOG_LEVEL=info
ENABLE_METRICS=true
MAX_MESSAGE_HISTORY=1000

# RSS Configuration
RSS_TITLE=WhatsApp Monitor RSS Feed
RSS_DESCRIPTION=Real-time WhatsApp message monitoring

# Optional: Email notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
